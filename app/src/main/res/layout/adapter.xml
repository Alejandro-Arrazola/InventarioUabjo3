<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagenadapter"
        android:layout_width="60px"
        android:layout_height="60px"
        app:srcCompat="@drawable/ic_ok_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/depositarioadapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOLA"
        android:textSize="40px"
        android:textColor="@color/colorPrimaryText"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imagenadapter"
        android:layout_toEndOf="@+id/imagenadapter" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOLA"
        android:id="@+id/descripcionadapter"
        android:textSize="20px"
        android:textColor="@color/colorSecondaryText"
        android:layout_below="@+id/depositarioadapter"
        android:layout_alignLeft="@+id/depositarioadapter"
        android:layout_alignStart="@+id/depositarioadapter" />
<ImageView
    android:id="@+id/imagescan"
    android:layout_width="60px"
    android:layout_height="60px"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginRight="37dp"
    android:layout_marginEnd="37dp"
    app:srcCompat="@drawable/ic_assigment_ok_48dp"/>






</RelativeLayout>