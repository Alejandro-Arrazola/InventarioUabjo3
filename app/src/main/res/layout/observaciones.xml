<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_below="@+id/text1"
        android:id="@+id/text"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_Observaciones"

        android:layout_centerHorizontal="true"


        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text"
        android:weightSum="1">

        <EditText
            android:id="@+id/textobser"
            style="@android:style/Widget.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.35"
            android:inputType="textMultiLine"
            android:justificationMode="inter_word"
            android:minHeight="181dp"
            android:minLines="5"
            android:padding="@dimen/fab_margin"
            android:singleLine="false"
            android:text=""
            android:theme="@android:style/Widget.EditText" />


        <Button
        android:id="@+id/agregarob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Observacion"
        android:layout_below="@+id/text"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/cancelarob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Cancelar" />
    </LinearLayout>

</RelativeLayout>